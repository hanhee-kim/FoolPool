<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="mapper.drfoolpool">
 
 
 	<!-- 쿼리문 작성하기 -->
 
 	<!-- 1-1. 게시글목록 조회 -->
 	<select id="selectDrFoolPoolList" parameterType="Integer" resultType="DrFoolPool">
 		<![CDATA[
 			select * from drfoolpool order by num desc
 			limit #{row},10
 		]]>
 	</select>
 	
 	<!-- 1-2. 전체 페이지수 계산을 위한 전체 행 수 조회 -->
 	<select id="selectDrFoolPoolCount" resultType="Integer">
 		<![CDATA[
 			select count(no) from drfoolpool
 		]]>
 	</select>
 
